<LengthContractionScreen>:
    orientation: 'vertical'
    tP: user_lE
    tE: user_vE
    uE: user_lP
    id: length_contraction_screen
    display: user_lE, user_vE, user_lP

    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#69B3F2")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            font_color:
                utils.get_color_from_hex("#424FFF")
            font_size: 30
            font_name: "Rubik-Bold.ttf"
            text: "Length (Lorentz) Contraction"
            size_hint: 1, .1
            pos_hint: {"top": 1, "left": 1}

        Label:
            font_size: 17
            text: "[b][u]L naught[/u][/b] (Proper Length)"
            markup: True
            size_hint: .5, .1
            pos_hint: {"top": .9, "right": .53}

        FloatInput:
            id: user_lE
            size_hint: .3, .06
            pos_hint: {"top": .87, "right": .95}
            multiline: False
            focus: True


        Label:
            font_size: 17
            text:"[b][u]V[/u][/b] (Velocity of moving frame)"
            markup: True
            size_hint: .5, .1
            pos_hint: {"top": .7, "right": .53}

        FloatInput:
            id: user_vE
            size_hint: .3, .06
            pos_hint: {"top": .67, "right": .95}
            multiline: False
            focus: True


        Label:
            font_size: 17
            text: "[b][u]L'[/u][/b] (Contracted Length)"
            markup: True
            size_hint: .5, .1
            pos_hint: {"top": .5, "right": .53}

        FloatInput:
            id: user_lP
            size_hint: .3, .06
            pos_hint: {"top": .47, "right": .95}
            multiline: False
            focus: True



        Button:
            font_size: 18
            pos: self.pos
            size_hint: 1, .1
            pos_hint: {"top": .2, "right": 1}
            text: "[u]Evaluate[/u]"
            markup: True
            on_release:
                length_contraction_screen.get_length((user_lE.text), (user_vE.text), (user_lP.text))


        Button:
            color: 0,0,0,1
            pos: self.pos
            size_hint: 1, .1
            text: "[u]Back[/u]"
            markup: True
            pos_hint: {"top": .1, "right": 1}
            font_size: 18

            on_release:
                app.change_screen("relativity_screen", direction='left', mode='pop')

